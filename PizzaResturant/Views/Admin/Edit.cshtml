@model PizzaModel

    <div class="edit-container">
      <div class="edit-box">
          <form method="post">
        <table>
          <tr>
            <th>select pizza</th>
            <th>pizza name</th>
            <th>price</th>
            <th></th>
          </tr>
          <tr>
            <td>
                <select asp-for="PizzaId" id="pizza">
                        @foreach (var pizza in ViewBag.options)
                        {
                            <option value="@pizza.PizzaId" >@pizza.Name</option>
                        }

                    </select>
            </td>
            <td><input asp-for="Name" type="text"/></td>
            <td><input asp-for="Price" type="text" /></td>

            <div class="form-group">
                <label for="image-upload" class="upload-button">Select Image</label>
                <input asp-for="ImgPath" type="file" id="image-upload" name="ImgPath">
            </div><br>

            <td><button type="submit" class="edit-button">Eidt</button</td>
          </tr>
        </table>
        </form>
      </div>
    </div>